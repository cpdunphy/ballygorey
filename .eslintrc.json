{
    "root": true,  
    "parser": "@typescript-eslint/parser",
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/eslint-recommended",
        "plugin:@typescript-eslint/recommended",
        "plugin:prettier/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module",
        "project": "./tsconfig.json"
    },
    "plugins": [
        "@typescript-eslint",
        "react",
        "react-hooks",
        "prettier"
    ],
    "rules": {
        "react/jsx-filename-extension": [
            "error", 
            {
                "extensions": [".tsx"]
            } 
        ],
        "prettier/prettier": [
            "error", 
            { 
                "singleQuote": true, 
                "semi": false,
                "trailingComma": "es5"
            }
        ],
        "@typescript-eslint/no-use-before-define": [
            "error",
            { 
                "functions": false, 
                "variables": true, 
                "classes": true 
            }
        ]
    }
}
